{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["*[sS]pec.ts","src/tests/**"],
    "rules": {
	"semi": [2, "always"],
    "quotes": [2, "double"],
    "space-before-function-paren": ["error", {
    "anonymous": "always",
    "named": "never",
    "asyncArrow": "never"
    }]
    } 

}
